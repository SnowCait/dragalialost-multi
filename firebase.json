{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/createRoom",
        "function": "createRoom"
      },
      {
        "source": "/subscribeQuest",
        "function": "subscribeQuest"
      },
      {
        "source": "/unsubscribeQuest",
        "function": "unsubscribeQuest"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix %RESOURCE_DIR% run lint"
    ]
  }
}
